{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "useTabs": false,
    "insertFinalNewline": false,
    "overrides": [
        {
            "files": ["*.js", "*.jsx", "*.json", "*.html", "*.css"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["Makefile"],
            "options": {
                "useTabs": true,
                "tabWidth": 4
            }
        },
        {
            "files": ["*"],
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
